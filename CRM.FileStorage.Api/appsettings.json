{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*", 
  "FileStorageSettings": {
    "BasePath": "/var/files",
    "TempDirectory": "temp",
    "PermanentDirectory": "permanent",
    "MaxFileSizeMb": 10,
    "AllowedImageExtensions": [ ".jpg", ".jpeg", ".png", ".gif", ".bmp" ],
    "AllowedImageMimeTypes": [ "image/jpeg", "image/pjpeg", "image/png", "image/gif", "image/bmp" ]
  },
  "QrCodeSettings": {
    "DefaultSize": 300,
    "DarkColorR": 0,
    "DarkColorG": 0,
    "DarkColorB": 0,
    "LightColorR": 255,
    "LightColorG": 255,
    "LightColorB": 255
  }
}